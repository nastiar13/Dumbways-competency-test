<div class="d-flex justify-content-between">

    <div class="d-flex justify-content-between w-50">
        <a href="/collection/<%= coll[0].user_id %> " class="btn btn-dark w-25">< back</a>
        <div class="d-flex w-25 coll-name">
            <p><%= coll[0].name %> </p>
        </div>
    </div>
    <a href="/delete-coll/<%= coll[0].id %>" class="btn btn-danger flex-item">Delete</a>
</div>

<div class="container mt-5">
    <form action="/add-task/<%= coll[0].id %> " method="post">
        <input type="text" name="task">
        <button type="submit">add task</button>

    </form>
    <div class="task" style="margin-bottom: 2rem;margin-top: 2rem;">

       <h4>Task </h4> 
       <ul class="list-group">
           
        <% tasks.forEach(e => { %>
            <% if (e.is_done == 0) { %>
             <li class="list-group-item d-flex justify-content-between"><p><%= e.name %></p> <a href="/done/<%= e.id %> " class="btn btn-light"><img src="https://img.icons8.com/material-outlined/24/000000/checkmark--v1.png" class="rounded border border-dark" alt="..."></a> </li>
            <% } %>
            
        <% }) %>
      </ul>
    </div>
    <div class="complete">

        <h4>Completed</h4>
       <ul class="list-group">
        <% tasks.forEach(e => { %>
            <% if (e.is_done == 1) { %>
             <li class="list-group-item"><p><%= e.name %> </p></li>

            <% } %>
            
        <% }) %>

      </ul>
    </div>
    



</div>